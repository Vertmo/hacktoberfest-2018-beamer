% Title page
\defbeamertemplate*{title page}{hacktoberfest2018}[1][] { 
  \usebackgroundtemplate{title background}
  \vskip2.2cm%
  \begin{columns}[t]
    \begin{column}{8cm}\end{column}
    \begin{column}{7cm}
      \begin{beamercolorbox}[wd=7cm,right,#1,ignorebg]{title}
        \usebeamerfont{title}\inserttitle
      \end{beamercolorbox}%
      \vskip0.75cm%
      \begin{beamercolorbox}[wd=7cm,right,#1,ignorebg]{author}
        \usebeamerfont{author}\insertauthor
      \end{beamercolorbox}
      \vskip0.2cm%
      \begin{beamercolorbox}[wd=7cm,right,#1,ignorebg]{date}
        \usebeamerfont{author}\insertdate
      \end{beamercolorbox}
    \end{column}
  \end{columns}
  \vfill
}

