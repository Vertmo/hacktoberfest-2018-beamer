    \begin{column}{7cm}
      \begin{beamercolorbox}[wd=6cm,right,#1]{title}
        \usebeamerfont{title}\inserttitle%
      \end{beamercolorbox}%
      \vskip0.75cm%
      \begin{beamercolorbox}[wd=6cm,right,#1]{author}
        \usebeamerfont{author}\insertauthor%
      \end{beamercolorbox}
      \vskip0.2cm%
      \begin{beamercolorbox}[wd=6cm,right,#1]{date}
        \usebeamerfont{author}\insertdate%
      \end{beamercolorbox}
    \end{column}
  \end{columns}
  \vfill
}

